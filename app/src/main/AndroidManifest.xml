<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.practice.vlad.chargemonitor"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <permission android:name="BATTERY_STATS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
            android:name=".PowerConnectionReceiver">
        </receiver>

        <service
            android:name=".BatteryService">
        </service>

        <receiver
            android:name="com.practice.vlad.chargemonitor.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
